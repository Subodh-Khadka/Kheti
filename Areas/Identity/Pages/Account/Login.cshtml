<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<h1>@ViewData["Title"]</h1>

<div class="container-fluid login_container d-flex gap-0 justify-content-center align-items-center h-100">
    <div class="row justify-content-center login">
        <div class="col-lg-6 col-md-12 col-sm-12 p-0 left_section">
            <img src="~/Images/HomePage/7795297.jpg" class="img-fluid images" alt="Placeholder Image">
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 right_section" style="background-color: #fcfbfb;">
            <p class="text-black fw-bolder px-4 pt-4 mt-4 mb-0" style="font-size: x-large;">Login</p>
            <p class="text-black px-4 pt-0">Please enter credential to continue</p>
            <div class="d-flex flex-column justify-content-center align-items-center">
                <form id="registerForm" class="container px-4 mt-5" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="form-group pb-3 col-lg-12 col-md-12 col-sm-6">
                        <input asp-for="Input.Email" class="form-control" aria-required="true" id="exampleInputEmail1"
                               aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group pb-3 col-lg-12 col-md-12 col-sm-6">
                        <input asp-for="Input.Password" class="form-control" aria-required="true" id="exampleInputEmail1"
                               aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label mb-3" for="exampleCheck1">Keep Me Logged In</label>
                    </div>
                    <button type="submit" class="btn btn-success w-100 mb-4">LOGIN</button>
                    <a href="/Register.html" class="text-success">Back To Registration</a>
                </form>
            </div>
            <!-- Add your additional content here -->
        </div>
    </div>
</div>

