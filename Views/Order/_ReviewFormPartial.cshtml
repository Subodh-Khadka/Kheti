@model Kheti.ViewModels.OrderVm
<!-- Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header purple-background text-white">
                <h5 class="modal-title" id="exampleModalLongTitle">Review for the product</h5>
                <button type="button" id="close_btn" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span class="btn btn-outline-danger" aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="SaveReview" asp-controller="Order" method="post" class="bg-light">
                <input type="hidden" id="rating" name="rating" />
                <input type="hidden" id="orderId" name="orderId" value="@Model.Order.OrderId" />
                <input type="hidden" id="productId" name="productId" />
                <div class="modal-body">
                    <div class="form-group">
                        <label>Select rating for product</label>
                        <div class="rating">
                            <i class="bi bi-star-fill fs-3" data-rating="1"></i>
                            <i class="bi bi-star-fill fs-3" data-rating="2"></i>
                            <i class="bi bi-star-fill fs-3" data-rating="3"></i>
                            <i class="bi bi-star-fill fs-3" data-rating="4"></i>
                            <i class="bi bi-star-fill fs-3" data-rating="5"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="comment">Comment:</label>
                        <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                </div>
            </form>
        </div>
    </div>
</div>