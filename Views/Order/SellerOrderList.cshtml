@model Kheti.ViewModels.OrderVm

<link rel="stylesheet" href="~/css/orderList.css" asp-append-version="true" />

<div class="container d-flex justify-content-between">
    <div>
        <h5 class="text-center mt-0 text-success">Seller Order History</h5>
    </div>

    <div class="dropdown text-end mb-1 mt-0">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Filter
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a asp-action="SellerOrderList" asp-route-status="all" class="dropdown-item">All</a></li>
            <li><a asp-action="SellerOrderList" asp-route-status="Pending" class="dropdown-item">Pending</a></li>
            <li><a asp-action="SellerOrderList" asp-route-status="Completed" class="dropdown-item">Completed</a></li>
        </ul>
    </div>
</div>

<div class="container mt-1 mb-4">
    <div class="row d-flex justify-content-center ">
        <div class="col-sm-12 col-md-12">
            <div class="col-12">
                <table class="table table-bordered table-responsive-sm">
                    <thead>
                        <tr class="text-center">
                            <th>Order Id</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Date</th>
                            <th>Order Status</th>
                            <th>Payment Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.OrderItems)
                        {
                            <tr class="text-center align-items-center">
                                <td>@item.OrderId</td>
                                <td>@item.Product.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price</td>
                                <td>@item.Order.OrderCreatedDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.Order.OrderStatus</td>
                                <td>@item.Order.PaymentStatus</td>
                                <td>
                                    <a asp-action="OrderDetails" asp-route-orderId="@item.OrderId" class="btn btn-sm btn-primary">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
