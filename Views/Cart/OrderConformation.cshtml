@model int
<style>
    p {
        margin: 5px 0px;
    }
</style>

<div class="d-flex container justify-content-center">
    <div class="card text-center w-50">
        <div class="card-header purple-background text-white">
            Order Payment
        </div>
        <div class="card-body">
            <i class="bi bi-check2-circle text-success fs-4"></i>
            <h5 class="card-title text-success">Order Placed!</h5>
            <p>Order has been placed successfully</p>
            <a style="font-size:10px;" asp-action="OrderList" asp-controller="Order" class="btn btn-sm btn-success">Go to orderList</a>
        </div>
        <div class="card-footer text-body-secondary purple-background text-white">
            Thank you!
        </div>
    </div>
</div>