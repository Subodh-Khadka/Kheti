<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/adminLayout.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
    </style>
</head>
@* <button id="sidebarToggle" class="navbar-brand toggles bg-dark ms-2 mt-1 text-center">
    <i class="bi bi-list icon"> </i>
</button> *@
<body>
    <div class="header">
        <button id="sidebarToggle" class="border-0 mt-2 mb-1">
            <i class="bi bi-list icon"> </i>
        </button>
    </div>
    <div class="sidebar" id="sidebar">
            <ul class="nav flex-column h-100 mt-5">
                <li class="nav-item">
                    <a asp-action="Index" asp-controller="Admin" class="nav-link "><i class="bi bi-graph-down-arrow fs-6 "></i> Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CategoryList"><i class="bi bi-diagram-3-fill fs-6"></i> Category</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="UserList"><i class="bi bi-people fs-6"></i> Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="QueryList"><i class="bi bi-person-raised-hand fs-6"></i> Queries</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="OrderList"><i class="bi bi-postcard"></i> Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill fs-6"></i> Home</a>
                </li>
                <li class="nav-item logout-li">
                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button id="logout" type="submit" class="nav-link logout-btn border-0"><i class="bi bi-box-arrow-left ms-2 me-2"></i> Logout</button>
                    </form>
                </li>
            </ul>        
    </div>

    <div class="main-content">
        <div class="container-fluid">
            <partial name="_Notification" />
            @RenderBody()
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Check if the sidebar state is stored in localStorage
            var isSidebarHidden = localStorage.getItem('sidebarHidden') === 'true';

            // Set the initial state of the sidebar based on the stored value
            if (isSidebarHidden) {
                $('#sidebar').addClass('sidebar-hidden');
                $('.main-content').addClass('show-full');
            }

            $('#sidebarToggle').click(function () {
                $('#sidebar').toggleClass('sidebar-hidden');
                $('.main-content').toggleClass('show-full');

                // Store the current state of the sidebar in localStorage
                var isHidden = $('#sidebar').hasClass('sidebar-hidden');
                localStorage.setItem('sidebarHidden', isHidden);
            });
        });

    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        var toastEl = document.querySelector('.toast');
        var toast = new bootstrap.Toast(toastEl);
        toast.show();
    </script>
</body>
</html>
