@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    var currentUser = await UserManager.GetUserAsync(User);
    var khetiUser = currentUser as KhetiApplicationUser;
    if (khetiUser != null)
    {
        string profilePictureUrl = khetiUser.ProfilePictureURL;
        string firstName = khetiUser.FirstName;
        string lname = khetiUser.LastName;
        ViewData["ProfilePictureUrl"] = profilePictureUrl;
        ViewData["FirstName"] = firstName;
        ViewData["LastName"] = lname;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/adminLayout.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        .nav-icon {
            margin-right: 10px;
        }

    </style>
</head>
<body>
    <div class="d-flex justify-content-between align-content-center p-2 bg-light fixed-top">

        <h6 class="align-self-center ms-4 text-center text-dark"> <img src="~/@ViewData["ProfilePictureUrl"]" height="40px" width="40px" class="rounded-circle" /> <span  class="" style="font-size:small">Hi Admin, @ViewData["FirstName"]</span></h6>
        <img src="~/Images/KhetiLogo/khetiLogo.png" height="40px" width="180px" />
    
        <hr />
    </div>

    <div class="sidebar mt-3" id="sidebar">
        <ul class="nav flex-column h-100 mt-5 bg-light rounded-start rounded-end">
            <li class="nav-item mt-1">
                <a class="nav-link" asp-action="Index" asp-controller="Admin"><i class="bi bi-graph-down-arrow fs-6 nav-icon "></i> Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Admin" asp-action="CategoryList"><i class="bi bi-diagram-3 fs-6 nav-icon"></i> Category</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Admin" asp-action="ProductList"><i class="bi bi-layers nav-icon"></i> Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Admin" asp-action="UserList"><i class="bi bi-people fs-6 nav-icon"></i> Users</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Admin" asp-action="QueryList"><i class="bi bi-question-square nav-icon fs-6"></i> Queries</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Admin" asp-action="OrderList"><i class="bi bi-postcard fs-6 nav-icon"></i> Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Admin" asp-action="BookingList"><i class="bi bi-journal nav-icon "></i> Bookings</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Admin" asp-action="PaymentList"><i class="bi bi-wallet2 nav-icon"></i> Payments</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Admin" asp-action="ReportList"><i class="bi bi-flag nav-icon fs-6"></i> Reports</a>
            </li>   

            <li class="nav-item">
                <a class="nav-link navs" id="register" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-person-add fs-6 nav-icon"></i> Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link navs" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door fs-6 nav-icon"></i> Home</a>
            </li>
            <li class="nav-item logout-li">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link logout-btn border-0"><i class="bi bi-box-arrow-left ms-2 me-2"></i> Logout</button>
                </form>
            </li>
        </ul>
    </div>

    <div class="main-content mt-5">
        <div class="container-fluid">
            <partial name="_Notification" />
            @RenderBody()
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Check if the sidebar state is stored in localStorage
            var isSidebarHidden = localStorage.getItem('sidebarHidden') === 'true';

            // Set the initial state of the sidebar based on the stored value
            if (isSidebarHidden) {
                $('#sidebar').addClass('sidebar-hidden');
                $('.main-content').addClass('show-full');
            }

            $('#sidebarToggle').click(function () {
                $('#sidebar').toggleClass('sidebar-hidden');
                $('.main-content').toggleClass('show-full');

                // Store the current state of the sidebar in localStorage
                var isHidden = $('#sidebar').hasClass('sidebar-hidden');
                localStorage.setItem('sidebarHidden', isHidden);
            });
        });

    </script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/js/adminSite.js" asp-append-version="true"></script> *@
    <script src="~/js/adminsite.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        var toastEl = document.querySelector('.toast');
        var toast = new bootstrap.Toast(toastEl);
        toast.show();
    </script>
</body>
</html>
