
@if (TempData["success"] != null)
{
    <div class="toast align-items-center text-white bg-success border-0 position-absolute top-0 end-0 mt-2" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000">
        <div class="d-flex">
            <div class="toast-body">
                @TempData["success"]
            </div>
            <button type="button" class="btn-close me-2 m-auto"  data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}

