@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<style>
    .login_signup_btn {
        display: flex;
        gap: 1rem;
        margin-right: 10px;
    }

    .login_signup_btn a:hover{
        color:darkgray;
    }

    .signup_btn {
        color: green;
        background-color: #ffffff;
        padding: 0.3rem 1.5rem;
        border: 1px solid green;
        border-radius: 5px;
    }

        .signup_btn a {
            text-decoration: none;
        }

    .login_btn {
        background-color: #099462;
        color: white;
        padding: 0.3rem 1.5rem;
        border: 1px solid green;
        border-radius: 5px;
        margin-right: 0rem;
    }

        .login_btn a {
            color: white;
            text-decoration: none;
        }
</style>

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            @* <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a> *@
            <a id="manage" class="nav-link text-secondary mt-1 fw-bolder" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello User! </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
            </form>
        </li>
    }
    else
    {
        <div class="login_signup_btn">
            <li class="nav-item">
                <a class="signup_btn nav-item text-decoration-none" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="login_btn nav-item text-decoration-none" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        </div>
    }
</ul>
