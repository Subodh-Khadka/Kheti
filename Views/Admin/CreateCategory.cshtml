@model Kheti.Models.Category

@{
    ViewData["Title"] = "Create";
}
@{
    Layout = "_AdminLayout";
}

<div class="container">
    <h6 class="text-center">Create Product Category</h6>
    <hr/>    

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Category Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-sm btn-success">Create</button>
                    <a asp-action="CategoryList" asp-controller="Admin" class="btn btn-sm btn-secondary">Back To List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
