@model List<Kheti.Models.Order>
@{
    Layout = "_AdminLayout";
}

<style>
    .table th {
        background-color: aliceblue;
    }

    .table {
        font-size: x-small;
        border: 1px solid #dddddd;
    }

    td {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100px;
    }
</style>

<div class="container-fluid">
    <h6 class="text-center">Userlist</h6>
    <hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Total</th>
                <th>OrderStatus</th>
                <th>PaymentStatus</th>
                <th>Date</th>
               @*  <th>ProfileImage</th>
                <th>Actions</th> *@
            </tr>
        </thead>
        <tbody>

            @foreach (var orders in Model)
            {
                @if (orders.OrderId != null)
                {
                    <tr>
                        <td title="@orders.CustomerName">@orders.CustomerName</td>
                        <td title="@orders.OrderTotal">@orders.OrderTotal</td>
                        <td>@orders.OrderStatus</td>
                        <td>@orders.PaymentStatus</td>
                        <td>@orders.OrderCreatedDate.ToString("yyyy-MM-dd")</td>
                       @*  <td>
                            <img src="~/@users.ProfilePictureURL" height="30px" width="30px" />
                        </td> *@
                        <td>
                            <a class="btn btn-sm btn-primary" asp-action="EditInformation" asp-controller="User" asp-route-id="@orders.OrderId"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-sm btn-info text-white" asp-action="EditInformation" asp-controller="User" asp-route-id=""><i class="bi bi-shield-x"></i></a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>