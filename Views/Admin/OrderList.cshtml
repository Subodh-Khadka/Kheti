@model List<Kheti.Models.Order>
@{
    Layout = "_AdminLayout";
}

<style>

</style>

<div class="container-fluid">

    <div class="dropdown text-end">
        <button class="btn btn-sm btn-primary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Filter
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a asp-action="OrderList" asp-route-status="all" class="dropdown-item">all</a></li>
            <li><a asp-action="OrderList" asp-route-status="Pending" class="dropdown-item">pending</a></li>
            <li><a asp-action="OrderList" asp-route-status="Completed" class="dropdown-item">completed</a></li>
            <li><a asp-action="OrderList" asp-route-status="canceled" class="dropdown-item">canceled</a></li>
        </ul>
    </div>

    <h6 class="">Orders</h6>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Total</th>
                <th>OrderStatus</th>
                <th>PaymentStatus</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var orders in Model)
            {
                @if (orders.OrderId != null)
                {
                    <tr>
                        <td title="@orders.CustomerName">@orders.CustomerName</td>
                        <td title="@orders.OrderTotal">@orders.OrderTotal</td>
                        <td>@orders.OrderStatus</td>
                        <td>@orders.PaymentStatus</td>
                        <td>@orders.OrderCreatedDate.ToShortDateString()</td>
                       @*  <td>
                            <img src="~/@users.ProfilePictureURL" height="30px" width="30px" />
                        </td> *@
                        <td>
                            <a class="btn btn-sm btn-primary" asp-action="EditInformation" asp-controller="User" asp-route-id="@orders.OrderId"><i class="bi bi-pencil"></i></a>
                            <a class="btn btn-sm btn-danger text-white" asp-action="EditInformation" asp-controller="User" asp-route-id=""><i class="bi bi-shield-x"></i></a>
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>
</div>