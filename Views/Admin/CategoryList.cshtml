@model IEnumerable<Kheti.Models.Category>
@{
    Layout = "_AdminLayout";
}

@{
    ViewData["Title"] = "Index";
}

<style>
    .table{
        font-size:smaller;
    }
    
    .button{
        font-size:small;
        width:50px;
    }
    .btn{
        width:100px;
        font-size:small;
    }
</style>

<div class="container">
    <h6 class="text-center">Product Categories</h6>
    <hr />

    <p>
        <a class="btn purple-background btn-sm text-white" asp-action="CreateCategory" asp-controller="Admin">Create New</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <div class="d-flex gap-3">
                            <form asp-action="EditCategory" asp-controller="Admin" method="get">
                                <input type="hidden" id="id" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-primary text-white mt-1 mb-1 btn-sm"><i class="bi bi-pencil-square"></i></button>
                            </form>
                            <form asp-action="DeleteCategory" asp-controller="Admin" method="post">
                                <input type="hidden" id="id" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-danger text-white mt-1 mb-1 btn-sm"><i class="bi bi-trash3"></i></button>
                            </form>                            
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
