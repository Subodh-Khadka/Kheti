@model Kheti.Models.QueryForm

@{
    ViewData["Title"] = "CreateQuery";
}
<link rel="stylesheet" href="~/css/query.css" asp-append-version="true" />


<div class="container mt-5">
    <div class="row">
        <div class="card p-0 bg-light">
            <div class="card-header purple-background text-white">
                <h6 class="text-center mb-0">Query</h6>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="text-center">
                        <div class="rounded-start rounded-end mb-2" id="imagePreview"></div>
                    </div>
                    <form asp-action="CreateQuery" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="DateCreated" hidden />
                        <input asp-for="QueryStatus" hidden />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Title">Title</label>
                                    <input asp-for=Title type="text" class="form-control" placeholder="Enter Title">
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" type="text" class="form-control" placeholder="Enter Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Location">Location</label>
                                    <input asp-for="Location" type="text" class="form-control" placeholder="Enter Location">
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-2 mb-0">
                                    <label asp-for="ImageUrl" class="control-label"></label>
                                    <input type="file" id="profilePicture" name="imageFile" class="form-control" onchange="ImagePreview(event)">
                                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProblemCategory">select Query Category</label>
                                    <select asp-for="ProblemCategory" class="form-select">
                                        <option disabled selected>Select</option>
                                        <option>Crop</option>
                                        <option>Fertilizer</option>
                                        <option>Equipment</option>
                                    </select>
                                    <span asp-validation-for="ProblemCategory" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UrgencyLevel">select Urgency Level</i></label>
                                    <select asp-for=UrgencyLevel class="form-select">
                                        <option disabled selected>Select</option>
                                        <option>Low</option>
                                        <option>Medium</option>
                                        <option>High</option>
                                    </select>
                                    <span asp-validation-for="UrgencyLevel" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="">Description</label>
                                    <textarea asp-for=Description class="form-control" rows="5" placeholder="Enter description"></textarea>
                                </div>


                            </div>
                            <div class="d-flex justify-content-center align-items-center w-100">
                                <button type="submit" class="btn btn-sm btn-primary w-25"><i class="bi bi-send-fill"></i> Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    @* <p class="mt-1 text-danger">Please fill all the information before submission!</p> *@
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

