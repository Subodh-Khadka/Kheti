@model IEnumerable<Kheti.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="mt-5">Categories</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create" asp-controller="Category">Create New</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-dark" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-success" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
