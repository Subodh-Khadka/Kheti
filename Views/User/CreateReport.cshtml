@model Kheti.Models.Report

@{
    ViewData["Title"] = "CreateQuery";
}
<link rel="stylesheet" href="~/css/query.css" asp-append-version="true" />

<style>
    form label{
        color:forestgreen;
    }
</style>

<div class="container justify-content-center d-flex">
    <div class="row col-md-8">
        <div class="card p-0">
            <div class="card-header bg-danger text-white">
                <h6 class="text-center mb-0">Report <i class="bi bi-flag-fill"></i></h6>
            </div>

            <div class="card-body">
                <div class="row">
                    <form asp-action="SubmitReport" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="CreatedAt" hidden />
                        <input asp-for="ReportStatus" hidden />
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group bg-light p-3">
                                    <label asp-for="IssueType">select IssueType</label>
                                    <select asp-for="IssueType" class="form-select">
                                        <option disabled selected>Select</option>
                                        <option>Spam</option>
                                        <option>Inappropriate Content</option>
                                        <option>Technical Issue or Bug</option>
                                        <option>Harrasment or Abusive Behavior</option>
                                        <option>Violation of Community Guidelines</option>
                                    </select>
                                    <span asp-validation-for="IssueType" class="text-danger"></span>
                                </div>
                                <div class="form-group bg-light p-3">
                                    <label asp-for="Description">Description</label>
                                    <input asp-for="Description" type="text" class="form-control" placeholder="Enter description.....">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>

                                <div class="form-group bg-light p-3">
                                    <div class="form-group">
                                        <label asp-for="SeverityLevel">select Severity Level</label>
                                        <select asp-for="SeverityLevel" class="form-select">
                                            <option disabled selected>Select</option>
                                            <option>Low</option>
                                            <option>Medium</option>
                                            <option>High</option>
                                            <option>Critical</option>
                                        </select>
                                        <span asp-validation-for="SeverityLevel" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group bg-light p-3 mt-2">
                                    <label asp-for="ReportImageUrl" class="control-label">Report Image</label>
                                    <input asp-for=ReportImageUrl type="file" name="imageFile" class="form-control" />
                                    <span asp-validation-for="ReportImageUrl" class="text-danger"></span>
                                </div>
                                <div class="form-group bg-light p-3">
                                    <label asp-for="ContactEmail">Description</label>
                                    <input asp-for="ContactEmail" type="email" class="form-control" placeholder="Enter Email.....">
                                    <span asp-validation-for="ContactEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group bg-light p-3">
                                    <label asp-for="AdditionalInformation">AdditionalInformation</label>
                                    <input asp-for="AdditionalInformation" type="text" class="form-control" placeholder="Enter additional information.....">
                                    <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="d-flex justify-content-center align-items-center w-100">
                                <input type="submit" value="Submit Report" class="btn btn-sm btn-primary w-25" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

