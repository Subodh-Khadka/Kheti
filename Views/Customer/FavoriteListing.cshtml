
@model List<Kheti.Models.Favorite>

@{
    ViewData["Title"] = "Favorite Listing";
}

<style>
    .product-image {
        width: 100px;
        height: 80px;
        object-fit: cover;
    }
</style>

<h5 class="text-success">Favorite Products</h5>

