@if (Model.Count == 0)
{
    <p>No favorite products found.</p>
}
else
{
    <div class="row">
        @foreach (var favorite in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="~/@favorite.Product.ProductImageUrl" class="product-image m-2" />
                    <div class="card-body">
                        <h5 class="card-title">@favorite.Product.ProductName</h5>
                        <p class="card-text">@favorite.Product.ProductDescription</p>                        
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group d-flex gap-4">
                               @*  <a class="btn purple-background text-white" asp-action="Details" asp-controller="Customer" asp-route-id="@favorite.ProductId">Details</a> *@

                                <!-- Form to add product to cart -->
                                <form method="post" asp-action="AddToCartFromFavorites" asp-controller="Customer">                                    
                                    <input type="hidden" name="productId" value="@favorite.ProductId" />
                                    <input type="hidden" name="quantity" value="1" /> <!-- Set the quantity to 1 -->
                                    <button type="submit" class="btn btn-sm "><i class="bi bi-cart-dash fs-5 text-success "></i></button>
                                </form>

                                <!-- Form to remove product from favorites -->
                                <form asp-action="DeleteFromFavorite">
                                    <input type="hidden" name="id" value="@favorite.ProductId" />
                                    <button type="submit" class="btn btn-sm"><i class="bi bi-trash3-fill fs-5 text-danger"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
