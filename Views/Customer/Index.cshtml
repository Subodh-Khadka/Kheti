@model IEnumerable<Kheti.Models.Product>

@* @{
    ViewData["Title"] = "Index";
} *@

<link rel="stylesheet" href="~/css/product.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

<style>
    .pimage{        
    }
</style>

<body>
    <!-- product section -->    
    <div class="container-fluid">

        <p class="text text-center fw-bold mt-3 text-info ">Our Products</p>
        <div class="grey_line"></div>

        <!-- displaying products in grid -->
        <div class="container-fluid mt-3">
            <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mt-3">                
                @foreach (var product in Model)
                {
                    <div class="col pb-0 mb-0">
                        <div class="card h-100 border-0 pb-0 mb-0">
                            <img src="@product.ProductImageUrl" class="img-fluid pimage" alt="Product 1"/>
                            <div class="card-body text-center pb-0 mb-0">
                                <p class="mb-0 small_grey_text_css">@product.ProductName</p>
                                @* <p class="card-text mb-0"> @product.ProductDescription</p> *@
                                <p class="small_grey_text_css mb-2">Rs: @product.Price</p>
                                <a class="btn btn-success w-100" asp-controller="Customer" asp-action="Details" asp-route-id="@product.ProductId">View Details</a>                        
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - KhetiWebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous">
    </script>

</body>
